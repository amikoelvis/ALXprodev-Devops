#!/bin/bash

# Directory containing PokÃ©mon JSON data
DATA_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Check if data directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Directory $DATA_DIR not found. Run the batch fetch script first."
    exit 1
fi

# Create or overwrite the CSV file with header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through all .json files
for file in "$DATA_DIR"/*.json; do
    # Extract name, height, and weight using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms (divide by 10)
    height_m=$(awk "BEGIN { printf \"%.1f\", $height_dm / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight_hg / 10 }")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$REPORT_FILE"
done

# Print confirmation
echo "CSV Report generated at: $REPORT_FILE"
echo ""

# Display the contents
cat "$REPORT_FILE"

echo ""

# Calculate and display averages using awk (skip header)
awk -F, '
NR>1 {
    height += $2
    weight += $3
    count += 1
}
END {
    avg_h = height / count
    avg_w = weight / count
    printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", avg_h, avg_w
}' "$REPORT_FILE"
